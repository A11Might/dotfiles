{
    // -- general
    "workbench.colorTheme": "Everforest Dark",
    "editor.guides.indentation": false,
    "editor.guides.bracketPairs": true,
    "editor.suggest.insertMode": "replace",
    "editor.suggest.showWords": false,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'JetBrainsMono Nerd Font'",
    "editor.fontLigatures": true,
    "editor.fontWeight": "normal",
    "editor.fontSize": 15, // editor, output
    "editor.lineHeight": 1.6,
    "debug.console.fontFamily": "'JetBrainsMono Nerd Font'",
    "debug.console.fontSize": 16, // debug console
    "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
    "terminal.integrated.fontSize": 16, // terminal
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "editor.formatOnSave": true,
    // "http.proxy": "http://127.0.0.1:7890",
    // "http.proxySupport": "on",
    // -- code run
    "code-runner.saveAllFilesBeforeRun": true,
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "go": "go run",
    },
    // git blame
    "gitblame.inlineMessageEnabled": true,
    "gitblame.inlineMessageFormat": "${author.name}, ${author.date} Â· ${commit.summary}",
    // -- vim
    // editor behavior
    // "editor.cursorSurroundingLines": 8, // scroll off
    "editor.stickyScroll.enabled": true,
    "editor.lineNumbers": "relative", // display relative line number
    "zenMode.hideLineNumbers": false,
    "vim.useSystemClipboard": false,
    "vim.foldfix": true, // fold lines do not open when cursor through
    "vim.hlsearch": true, // search highlighting
    "vim.incsearch": true,
    "vim.smartcase": true,
    "vim.ignorecase": true,
    "vim.highlightedyank.enable": true, // yank highlighting
    "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
    "vim.highlightedyank.textColor": "white",
    // mapping
    "vim.leader": "<space>",
    "vim.useCtrlKeys": true,
    "vim.handleKeys": {
        "<C-d>": true,
    },
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "Q"
            ],
            "commands": [
                ":q"
            ]
        },
        {
            "before": [
                "S"
            ],
            "commands": [
                "editor.action.format",
                ":w"
            ]
        },
        {
            // split the screens to below (horizontal)
            "before": [
                "s",
                "j"
            ],
            "after": [
                "<C-w>",
                "s"
            ]
        },
        {
            // split the screens to right (vertical)
            "before": [
                "s",
                "l"
            ],
            "after": [
                "<C-w>",
                "v"
            ]
        },
        {
            // close the current window
            "before": [
                "<leader>",
                "c",
                "c"
            ],
            "after": [
                "<C-w>",
                "c"
            ]
        },
        {
            // close the other windows
            "before": [
                "<leader>",
                "c",
                "o"
            ],
            "commands": [
                "workbench.action.closeOtherEditors"
            ]
        },
        {
            // search highlight clear
            "before": [
                "<leader>",
                "s",
                "l"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            // find next and center this line
            "before": [
                "n"
            ],
            "after": [
                "n",
                "z",
                "z"
            ]
        },
        {
            // find preview and center this line
            "before": [
                "N"
            ],
            "after": [
                "N",
                "z",
                "z"
            ]
        },
        {
            // show next tab
            "before": [
                "L"
            ],
            "after": [
                "g",
                "t"
            ]
        },
        {
            // show preview tab
            "before": [
                "H"
            ],
            "after": [
                "g",
                "T"
            ]
        },
        {
            // go to implementation
            "before": [
                "g",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            // next error/warning/...
            // prev error/warning/...
            "before": [
                "g",
                "e"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            // code run
            "before": [
                "<leader>",
                "r",
                "r"
            ],
            "commands": [
                "code-runner.run"
            ]
        },
        {
            // code debug
            "before": [
                "<leader>",
                "r",
                "d"
            ],
            "commands": [
                "workbench.action.debug.start"
            ]
        },
        {
            // code stop
            "before": [
                "<leader>",
                "r",
                "s"
            ],
            "commands": [
                "code-runner.stop"
            ]
        },
        {
            // rename
            "before": [
                "R"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            // open explore
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "workbench.view.explorer"
            ]
        },
        {
            // show all file
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            // show recently file
            "before": [
                "<leader>",
                "f",
                "o"
            ],
            "commands": [
                "workbench.action.showAllEditorsByMostRecentlyUsed"
            ]
        },
        {
            // search keyword in directory
            "before": [
                "<leader>",
                "f",
                "w"
            ],
            "commands": [
                "workbench.action.quickTextSearch",
            ]
        },
        {
            // list all symbol
            "before": [
                "<leader>",
                "l",
                "s"
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        }
    ],
    // plugin
    "vim.surround": true,
    "vim.sneak": false,
    "vim.easymotion": false,
    // -- lua
    "Lua.runtime.version": "Lua 5.4",
    "Lua.diagnostics.disable": [
        "undefined-global",
        "lowercase-global"
    ],
    "Lua.diagnostics.globals": [
        "playdate",
        "import"
    ],
    "Lua.runtime.nonstandardSymbol": [
        "+=",
        "-=",
        "*=",
        "/="
    ],
    "Lua.workspace.library": [
        "$PLAYDATE_SDK_PATH/CoreLibs"
    ],
    "Lua.workspace.preloadFileSize": 1000,
    // -- golang
    "go.toolsManagement.autoUpdate": true,
    "go.lintTool": "golangci-lint",
    "go.formatTool": "gofmt",
    "go.alternateTools": {
        "go": "/opt/homebrew/bin/go"
    },
    // -- other
    "settingsSync.ignoredExtensions": [
        // "leetcode.vscode-leetcode",
    ],
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": true,
    "workbench.settings.editor": "json",
    "git.openRepositoryInParentFolders": "never",
    "diffEditor.hideUnchangedRegions.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.largeFileOptimizations": false,
    // leetcode
    "leetcode.endpoint": "leetcode-cn",
    "leetcode.workspaceFolder": "/Users/kohath/.leetcode",
    "leetcode.defaultLanguage": "java",
    "leetcode.hint.configWebviewMarkdown": false,
    "leetcode.hint.commandShortcut": false,
    "leetcode.showDescription": "In Webview",
    "leetcode.hint.commentDescription": false,
}